{
  "compilerOptions": {
    "target": "ES2016",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./es",
    "emitDeclarationOnly": true,
    "skipLibCheck": true, // TODO https://github.com/vuejs/core/issues/6554
    "lib": [
      "ESNext",
      "dom",
      "ESNext.Promise"
    ],
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./"
  },
  "include": [
    "packages/index.ts",
    "packages/hooks/*.ts",
    "packages/utils/*.ts",
    "packages/components/**/*.vue",
    "packages/components/**/*.ts",
    "types/*.d.ts",
    "packages/env.d.ts",
    "packages/components/bm-map/index.spec.tsx"
  ],
  "exclude": [
    "node_modules",
    "es"
  ],
  "files": [
    "./types/index.d.ts"
  ]
}